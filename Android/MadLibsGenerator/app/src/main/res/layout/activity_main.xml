<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="889dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Welcome to the Madlib Generator"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp">

            <TextView

                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:text="Please pick from one these Madlib options"
                android:textAlignment="center"
                android:textSize="20sp" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you don't pick a button before selecting generate, a random one will be chosen"
            android:textAlignment="center"
            android:textSize="15sp" />

        <FrameLayout
            android:id="@+id/frameLayoutForOptionOne"
            android:layout_width="match_parent"
            android:layout_height="117dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/optionOneMadLibRB"
                    android:layout_width="11dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="288dp"
                    android:layout_height="97dp"
                    android:layout_weight="1"
                    android:text="The very ______  person was ______. ______ was his/her/there name, he/she/they loved to ______. He/She/They were/was even once the ______ of the ______. His/Her/Their greatest achivement was ______, while ______" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayoutForOptionTwo"
            android:layout_width="match_parent"
            android:layout_height="117dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/optionTwoMadLibRB"
                    android:layout_width="11dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="288dp"
                    android:layout_height="97dp"
                    android:layout_weight="1"
                    android:text=" ______ walked to ______, while ______. They were a pro at ______, because of their unique ______. Which allowed them to do ______, afterward they would ______. Which reminded them of their ______." />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayoutForOptionThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/optionThreeMadLibRB"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:text="" />

                <TextView
                    android:layout_width="288dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="There once was a great ______, they were also excellent at ______. It got to a point they tried something else called ______, they sucked at it. They decided to even try ______. When all else failed they went to their ______, to ask for advice on ______. Their (same as the one before the last one) told them to just simply ______, which they simply were ______ by." />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/generateBTN"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="150dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:text="Generate" />

            <TextView
                android:id="@+id/madLibPrintLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/response"
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter responses here with spaces"
                    android:inputType="text" />


            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>