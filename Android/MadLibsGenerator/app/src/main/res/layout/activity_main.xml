<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to the Madlib Generator"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView

                android:layout_width="286dp"
                android:textAlignment="center"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:textSize="20dp"

                android:text="Please pick from one these Madlib options" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/optionOneMadLibBTN"
                android:layout_width="35dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginTop="25dp"
                android:layout_marginRight="5dp"
                android:text="1." />

            <TextView
                android:layout_width="288dp"
                android:layout_height="97dp"
                android:layout_weight="1"
                android:text="1. The very ______  person was ______. ______ was his/her/there name, he/she/they loved to ______. He/She/They were/was even once the ______ of the ______. His/Her/Their greatest achivement was ______, while ______" />

        </LinearLayout>

        <Button
            android:id="@+id/generateBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/outputTXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>