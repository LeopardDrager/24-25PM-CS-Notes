<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to the Madlib Generator"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp">

            <TextView

                android:layout_width="0dp"
                android:textAlignment="center"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="Please pick from one these Madlib options" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you don't pick a button before selecting generate a random one will be chosen"
            android:textAlignment="center"
            android:textSize="15sp" />

        <FrameLayout
            android:id="@+id/frameLayoutForOptionOne"
            android:layout_width="match_parent"
            android:layout_height="117dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/optionOneMadLibBTN"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="1." />

                <TextView
                    android:layout_width="288dp"
                    android:layout_height="97dp"
                    android:layout_weight="1"
                    android:text="The very ______  person was ______. ______ was his/her/there name, he/she/they loved to ______. He/She/They were/was even once the ______ of the ______. His/Her/Their greatest achivement was ______, while ______" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayoutForOptionTwo"
            android:layout_width="match_parent"
            android:layout_height="117dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/optionTwoMadLibBTN"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="2." />

                <TextView
                    android:layout_width="288dp"
                    android:layout_height="97dp"
                    android:layout_weight="1"
                    android:text="The very ______  person was ______. ______ was his/her/there name, he/she/they loved to ______. He/She/They were/was even once the ______ of the ______. His/Her/Their greatest achivement was ______, while ______" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayoutForOptionThree"
            android:layout_width="match_parent"
            android:layout_height="117dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/optionThreeMadLibBTN"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="3." />

                <TextView
                    android:layout_width="288dp"
                    android:layout_height="98dp"
                    android:layout_weight="1"
                    android:text="The very ______  person was ______. ______ was his/her/there name, he/she/they loved to ______. He/She/They were/was even once the ______ of the ______. His/Her/Their greatest achivement was ______, while ______" />

            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/generateBTN"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="150dp"
                android:layout_weight="1"
                android:text="Generate" />

            <TextView
                android:id="@+id/madLibPrintLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/response"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Enter responses here with spaces"
                    android:inputType="text"
                    android:paddingLeft="60dp" />


            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>